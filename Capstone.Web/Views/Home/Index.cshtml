<head>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Welcome!</h2>

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators-->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2" class="active"></li>
    </ol>
    <!--wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <a href="~/Routes/ViewRoutes"><img src="~/images/ViewRoutes.JPG" style="width: 100%; height: 23vw" alt="View Routes image" /></a>
        </div>
        <div class="item">
            <a href="~/Account/SignUp"><img src="~/images/WCTsignUpToday.gif" style="width: 100%; height: 23vw" alt="Sign Up Today image" /></a>
        </div>
        <div class="item">
            <a href="~/Account/LogIn"><img src="~/images/SignIn.JPG" style="width: 100%; height: 23vw" alt="Sign In image" /></a>
        </div>
    </div>
    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br />
<p>
    Welcome to Transportation Tracker - your user-friendly tool to view bus routes, add routes to your personal page, and receive real-time updates on your next available bus!
</p>
<br />
No account yet? @Html.ActionLink("Sign Up Now!", "SignUp", "Account")
<br />
<br />
Already have an account? @Html.ActionLink("Log In Here!", "LogIn", "Account")
