@using Capstone.Web.Models.ViewModel;
@model RouteViewModel

@{
    ViewBag.Title = "CreateRoute";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Routes</h2>

<h3 @*class="container-fluid"*@ id="highlight">Add Your New Route Below: </h3>

@Html.ValidationSummary()
@using (Html.BeginForm("CreateRoute", "Routes", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Add a route" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.Label("Day", "Day of the week")
        @Html.DropDownListFor(m => m.Day, RouteViewModel.Days())
    </div>
    <div class="form-group">
        @Html.Label("IsPrivate", "Private Route")
        @Html.CheckBoxFor(m => m.IsPrivate)
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
}
<br />
<h3 id="highlight">All Existing Routes:</h3>
<ul style="column-count:4;">
    @foreach (string s in (List<string>)TempData["allRouteNames"])
    {
        <p>@s</p>
    }
</ul>
<br />
